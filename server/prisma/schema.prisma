datasource postgres {
  provider = "postgresql"
  url      = env("POSTGRESQL_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  createdAt DateTime   @default(now())
  firstName String?
  id        String     @id @default(cuid())
  languages Language[]
  lastName  String?
  password  String
  roles     String[]
  updatedAt DateTime   @updatedAt
  username  String     @unique
}

model Language {
  createdAt   DateTime @default(now())
  description String?
  id          String   @id @default(cuid())
  name        User     @relation(fields: [nameId], references: [id])
  nameId      String
  updatedAt   DateTime @updatedAt
}